<Page
    x:Class="Spotify.Views.WrappedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Spotify.ViewModels"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:lvcore="using:LiveChartsCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!-- Vibrant Gradient Background -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFC3F8" Offset="0.0" />
            <GradientStop Color="#B2F2BA" Offset="0.25" />
            <GradientStop Color="#D7F2B3" Offset="0.5" />
            <GradientStop Color="#7F9E32" Offset="0.75" />
            <GradientStop Color="#6D6E6C" Offset="1.0" />
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock 
            Grid.Row="0"
            Text="Your Spotify Wrapped"
            FontSize="36"
            FontWeight="Bold"
            Margin="20,20,0,10"
            Foreground="Black"/>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="400" />
                    <RowDefinition Height="400" />
                    <RowDefinition Height="400" />
                    <RowDefinition Height="400" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Line Chart -->
                <lvc:CartesianChart
                    Title="{Binding LineChartTitle}"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding LineSeries}"
                    XAxes="{Binding LineXAxes}"
                    YAxes="{Binding LineYAxes}" />

                <!-- Bar Chart -->
                <lvc:CartesianChart
                    Title="{Binding BarChartTitle}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding BarSeries}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}" />

                <!-- Time Distribution Pie Chart -->
                <lvc:PieChart
                    Title="{Binding PieChartTitle}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0,0,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding PieSeries}" />

                <!-- Genre Distribution Pie Chart -->
                <lvc:PieChart
                    Title="{Binding GenrePieChartTitle}"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding GenrePieSeries}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>