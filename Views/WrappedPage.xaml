<Page
    x:Class="Spotify.Views.WrappedPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Spotify.ViewModels"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:lvcore="using:LiveChartsCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <!--  Vibrant Gradient Background  -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Offset="0.0" Color="#FFC3F8" />
            <GradientStop Offset="0.25" Color="#B2F2BA" />
            <GradientStop Offset="0.5" Color="#D7F2B3" />
            <GradientStop Offset="0.75" Color="#7F9E32" />
            <GradientStop Offset="1.0" Color="#6D6E6C" />
        </LinearGradientBrush>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Page Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="20,20,0,10"
            FontSize="36"
            FontWeight="Bold"
            Foreground="Black"
            Text="Your Wrapped" />

        <!--  Scrollable Content  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="400" />
                    <RowDefinition Height="400" />
                    <RowDefinition Height="400" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Line Chart  -->
                <lvc:CartesianChart
                    Title="{Binding LineChartTitle}"
                    Grid.Row="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding LineSeries}"
                    XAxes="{Binding LineXAxes}"
                    YAxes="{Binding LineYAxes}" />

                <!--  Bar Chart  -->
                <lvc:CartesianChart
                    Title="{Binding BarChartTitle}"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="0,0,10,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding BarSeries}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}" />

                <!--  Time Distribution Pie Chart  -->
                <lvc:PieChart
                    Title="{Binding PieChartTitle}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10,0,0,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding PieSeries}" />

                <!--  Genre Distribution Pie Chart  -->
                <lvc:PieChart
                    Title="{Binding GenrePieChartTitle}"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    LegendPosition="Bottom"
                    LegendTextPaint="{Binding LegendTextPaint}"
                    Series="{Binding GenrePieSeries}" />

                <!--  Total time spent  -->
                <TextBlock
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="Black"
                    Text="Total time you spent listening in this app" />
                <TextBlock
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,20"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="DarkGoldenrod"
                    Text="{x:Bind ViewModel.TotalTimeSpentDisplay, Mode=OneWay}" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>