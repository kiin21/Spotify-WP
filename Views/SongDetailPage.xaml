<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Spotify.Views.SongDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spotify.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!--<Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#8B2E8B" Offset="0"/>
                <GradientStop Color="#1E1E1E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer>
            <StackPanel Margin="24">
                --><!-- Header Section --><!--
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    --><!-- Song Cover Image --><!--
                    <Border Width="300" Height="300" CornerRadius="8" Margin="0,0,24,0">
                        --><!--<Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3"/>
                        </Border.Effect>--><!--
                        <Image x:Name="SongCover" Stretch="UniformToFill"/>
                    </Border>

                    --><!-- Song Info --><!--
                    <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                        <TextBlock Text="Song" FontSize="14" Foreground="#B3B3B3"/>
                        <TextBlock Text="nếu lúc đó" 
                                 FontSize="64" 
                                 FontWeight="Bold" 
                                 Foreground="White"
                                 TextWrapping="Wrap"/>

                        --><!-- Artist Info --><!--
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Border Width="24" Height="24" CornerRadius="12" Margin="0,0,8,0">
                                <Border.Background>
                                    <ImageBrush x:Name="ArtistImage"/>
                                </Border.Background>
                            </Border>
                            <TextBlock Text="tlinh" 
                                     Foreground="White" 
                                     FontSize="14"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text=" • " 
                                     Foreground="#B3B3B3" 
                                     FontSize="14"
                                     Margin="4,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="2023" 
                                     Foreground="#B3B3B3" 
                                     FontSize="14"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text=" • " 
                                     Foreground="#B3B3B3" 
                                     FontSize="14"
                                     Margin="4,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="4:24" 
                                     Foreground="#B3B3B3" 
                                     FontSize="14"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text=" • " 
                                     Foreground="#B3B3B3" 
                                     FontSize="14"
                                     Margin="4,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="49,674,152" 
                                     Foreground="#B3B3B3" 
                                     FontSize="14"
                                     VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>

                --><!-- Playback Controls --><!--
                <Grid Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Button Width="56" Height="56" Style="{StaticResource PlayButtonStyle}">
                            <Path Data="M8,5 L19,12 L8,19 Z" 
                                  Fill="Black"
                                  Stretch="Uniform"/>
                        </Button>
                        <Button Width="40" Height="40" Style="{StaticResource CircleButtonStyle}">
                            <Path Data="M16,4 L16,20 M8,4 L8,20" 
                                  Stroke="White" 
                                  StrokeThickness="2"/>
                        </Button>
                        --><!-- Add more control buttons as needed --><!--
                    </StackPanel>
                </Grid>

                --><!-- Lyrics Section --><!--
                <TextBlock Text="Lyrics" 
                         FontSize="20" 
                         FontWeight="SemiBold" 
                         Foreground="White" 
                         Margin="0,0,0,16"/>

                <ItemsControl x:Name="LyricsContainer">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                     Foreground="White" 
                                     FontSize="16" 
                                     LineHeight="24"
                                     Margin="0,0,0,8"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                --><!-- Artists Section --><!--
                <TextBlock Text="Artists" 
                         FontSize="20" 
                         FontWeight="SemiBold" 
                         Foreground="White" 
                         Margin="0,32,0,16"/>

                <ItemsControl x:Name="ArtistsContainer">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="48" 
                                        Height="48" 
                                        CornerRadius="24" 
                                        Margin="0,0,16,0">
                                    <Border.Background>
                                        <ImageBrush ImageSource="{Binding ImageUrl}"/>
                                    </Border.Background>
                                </Border>

                                <TextBlock Grid.Column="1" 
                                         Text="{Binding Name}" 
                                         Foreground="White"
                                         FontSize="16"
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>

    <Page.Resources>
        <Style x:Key="PlayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1ED760"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="{TemplateBinding CornerRadius}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>-->
</Page>
