<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Spotify.Views.SongDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Spotify.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto">
        <Grid Margin="0,0,0,20" Background="#2a2a2a">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Cover Art  -->
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Width="150"
                Height="150"
                Margin="20,20,20,0"
                Source="ms-appx:///Assets/Image1.jpg"
                Stretch="UniformToFill" />

            <!--  Song Information  -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,20,20,0"
                VerticalAlignment="Center"
                Spacing="5">
                <!--  Song Title  -->
                <TextBlock
                    FontSize="48"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="OMG" />

                <!--  Artist Name and Additional Info  -->
                <TextBlock
                    FontSize="16"
                    Foreground="LightGray"
                    Text="NewJeans • NewJeans 'OMG' • 2023 • 3:32 • 741,523,389" />
            </StackPanel>

            <!--  Playback Controls and Lyrics  -->
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="20,20,20,0">
                <StackPanel Margin="0,0,0,20" Orientation="Horizontal">
                    <!--  Play Button  -->
                    <Button
                        Width="50"
                        Height="50"
                        Background="Green"
                        CornerRadius="25">
                        <SymbolIcon Symbol="Play" />
                    </Button>

                    <!--  Other Icons  -->
                    <Button
                        Width="40"
                        Height="40"
                        Margin="10,0,0,0"
                        Background="Transparent">
                        <SymbolIcon Symbol="Like" />
                    </Button>
                    <Button
                        Width="40"
                        Height="40"
                        Background="Transparent">
                        <SymbolIcon Symbol="More" />
                    </Button>
                </StackPanel>

