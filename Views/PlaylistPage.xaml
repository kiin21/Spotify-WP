<Page
    x:Class="Spotify.Views.PlaylistPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spotify.Views"
    xmlns:models="using:Spotify.Models.DTOs">
    <!-- Thêm dòng này để khai báo namespace đúng -->

    <Grid>
        <ListView ItemsSource="{x:Bind ViewModel.Playlists, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:PlaylistDTO">
                    <!-- Sử dụng đúng namespace đã khai báo -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind Title}" Width="200" />
                        <TextBlock Text="{x:Bind Album}" Width="200" />
                        <TextBlock Text="{x:Bind DateAdded}" Width="200" />
                        <TextBlock Text="{x:Bind Duration}" Width="200" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
