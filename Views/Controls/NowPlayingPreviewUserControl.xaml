<UserControl
    x:Class="Spotify.Views.Controls.NowPlayingPreviewUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="10" Background="#1E1E1E" CornerRadius="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Song Cover -->
        <Image
            Grid.Column="0"
            Width="80"
            Height="80"
            Margin="0,0,10,0"
            Source="{x:Bind ViewModel.CurrentCoverArtUrl, Mode=OneWay}" />

        <!-- Song Info -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <TextBlock
                Text="{x:Bind ViewModel.CurrentSongTitle, Mode=OneWay}"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White" />
            <TextBlock
                Text="{x:Bind ViewModel.CurrentArtistName, Mode=OneWay}"
                FontSize="14"
                Foreground="Gray" />
            <TextBlock
                Text="{x:Bind ViewModel.TotalDurationDisplay, Mode=OneWay}"
                FontSize="12"
                Foreground="Gray" />
        </StackPanel>
    </Grid>
</UserControl>