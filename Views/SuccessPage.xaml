<Page
    x:Class="Spotify.Views.SuccessPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    Background="#121212">

    <Grid>
        <ScrollViewer>
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="24">

                <!--  Success Icon  -->
                <Ellipse
                    Width="120"
                    Height="120"
                    Fill="#1DB954">
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="IconScale" />
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Path
                    Width="60"
                    Height="60"
                    Margin="0,-90,0,60"
                    HorizontalAlignment="Center"
                    Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                    Fill="White"
                    Stretch="Uniform">
                    <Path.RenderTransform>
                        <ScaleTransform x:Name="CheckScale" />
                    </Path.RenderTransform>
                </Path>

                <!--  Text Content  -->
                <StackPanel Spacing="16">
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="48"
                        FontWeight="SemiBold"
                        Foreground="#1DB954"
                        Text="Premium Activated!">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="TitleTransform" />
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <TextBlock
                        MaxWidth="400"
                        HorizontalAlignment="Center"
                        FontSize="20"
                        Foreground="#B3B3B3"
                        Text="Welcome to your enhanced music experience"
                        TextAlignment="Center"
                        TextWrapping="Wrap">
                        <TextBlock.RenderTransform>
                            <TranslateTransform x:Name="SubtitleTransform" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </StackPanel>

                <!--  Continue Button  -->
                <Button
                    Margin="0,16,0,0"
                    Padding="32,12"
                    Background="#1DB954"
                    Click="BackToHome_Click"
                    Content="Start Listening"
                    CornerRadius="20"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White">
                    <Button.RenderTransform>
                        <TranslateTransform x:Name="ButtonTransform" />
                    </Button.RenderTransform>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>

    <!--  Animations  -->
    <Page.Resources>
        <Storyboard x:Name="LoadAnimation">
            <!--  Icon Scale Animation  -->
            <DoubleAnimation
                Storyboard.TargetName="IconScale"
                Storyboard.TargetProperty="ScaleX"
                From="0"
                To="1"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="IconScale"
                Storyboard.TargetProperty="ScaleY"
                From="0"
                To="1"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!--  Check Mark Animation  -->
            <DoubleAnimation
                BeginTime="0:0:0.3"
                Storyboard.TargetName="CheckScale"
                Storyboard.TargetProperty="ScaleX"
                From="0"
                To="1"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                BeginTime="0:0:0.3"
                Storyboard.TargetName="CheckScale"
                Storyboard.TargetProperty="ScaleY"
                From="0"
                To="1"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <BackEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!--  Text Slide Animations  -->
            <DoubleAnimation
                BeginTime="0:0:0.5"
                Storyboard.TargetName="TitleTransform"
                Storyboard.TargetProperty="Y"
                From="50"
                To="0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                BeginTime="0:0:0.6"
                Storyboard.TargetName="SubtitleTransform"
                Storyboard.TargetProperty="Y"
                From="50"
                To="0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>

            <!--  Button Slide Animation  -->
            <DoubleAnimation
                BeginTime="0:0:0.7"
                Storyboard.TargetName="ButtonTransform"
                Storyboard.TargetProperty="Y"
                From="50"
                To="0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <ExponentialEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>
</Page>