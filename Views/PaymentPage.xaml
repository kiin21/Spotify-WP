<Page
    x:Class="Spotify.Views.PaymentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Spotify.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter" />
    </Page.Resources>

    <ScrollViewer>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="10">
            <TextBlock FontWeight="Bold" Text="Choose Payment Method" />

            <TextBlock FontWeight="Bold" Text="Enter Card Details" />

            <!--  Cardholder Name Field  -->
            <TextBox
                Width="300"
                Header="Cardholder Name"
                Text="{Binding CardholderName, Mode=TwoWay}" />

            <!--  Card Number Field  -->
            <TextBox
                Width="300"
                Header="Card Number"
                Text="{Binding CardNumber, Mode=TwoWay}" />

            <!--  Expiry Date Field (MM/YYYY)  -->

            <TextBox
                Width="100"
                Margin="0,0,200,0"
                Header="MM/YY"
                Text="{Binding ExpirationDate, Mode=TwoWay}" />


            <!--  CVV Field  -->
            <TextBox
                Width="300"
                Header="CVV"
                Text="{Binding CVV, Mode=TwoWay}" />

            <!--  Amount Field (Read-Only)  -->
            <TextBox
                Width="300"
                Header="Amount"
                IsReadOnly="True"
                Text="{Binding Amount, Mode=OneWay}" />

            <!--  Message Field  -->
            <TextBox
                Width="300"
                Height="60"
                Header="Message"
                Text="{Binding Message, Mode=TwoWay}" />

            <Button
                Width="100"
                Command="{Binding PayCommand}"
                Content="Pay" />

            <TextBlock
                FontWeight="Bold"
                Foreground="Green"
                Text="{Binding StatusMessage}" />
            <TextBlock Foreground="Blue" Text="{Binding PaymentStatus}" />
        </StackPanel>
    </ScrollViewer>
</Page>
