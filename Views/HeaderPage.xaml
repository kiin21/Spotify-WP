<Page
    x:Class="Spotify.Views.HeaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spotify.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Logo -->
            <ColumnDefinition Width="*"/>
            <!-- Search bar -->
            <ColumnDefinition Width="Auto"/>
            <!-- Account icon -->
        </Grid.ColumnDefinitions>

        <!-- Logo -->
        <Image Source="/Assets/logo.png" Width="120" Height="40" VerticalAlignment="Center" Margin="20,0" Grid.Column="0"/>

        <!-- Search Bar with Magnifying Glass Icon -->
        <Grid Grid.Column="1" Height="40" VerticalAlignment="Center" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Icon -->
                <ColumnDefinition Width="*"/>
                <!-- Search TextBox -->
            </Grid.ColumnDefinitions>

            <!-- Magnifying Glass Icon -->
            <Image Source="/Assets/search_icon.png" Width="20" Height="20" VerticalAlignment="Center" Margin="10,0"/>

            <!-- Search TextBox -->
            <!--<TextBox 
                x:Name="SearchTextBox"
                Grid.Column="1"
                VerticalAlignment="Center"
                Padding="10"
                PlaceholderText="Search"
                Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                KeyDown="SearchTextBox_KeyDown" />-->
            <!-- Use the event handler -->
        </Grid>

        <!-- Account Icon -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20,0">
            <!-- Account Icon Button -->
            <Button x:Name="AccountButton" Width="40" Height="40" Background="Transparent">
                <Image Source="/Assets/account_icon.png" Width="40" Height="40" />
            </Button>
        </StackPanel>
    </Grid>
</Page>
