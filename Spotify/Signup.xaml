<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Spotify.Signup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Spotify"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Image Source="Assets/Resource/SpotifyLogo.png" Width="40" Height="40" Margin="0,0,0,20"/>
            <TextBlock Text="Sign up to Spotify" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Email or username" Foreground="White" Margin="0,0,0,5"/>
            <TextBox PlaceholderText="Email or username" Margin="0,0,0,10"/>

            <TextBlock Text="Password" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox PlaceholderText="Password" Margin="0,0,0,10"/>

            <TextBlock Text="Confirm Password" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox PlaceholderText="Confirm Password" Margin="0,0,0,20"/>

            <Button Content="Sign Up" Background="#1DB954" Foreground="White" HorizontalAlignment="Stretch" Height="40" CornerRadius="20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Already have an account?" Foreground="Gray"/>
                <HyperlinkButton Content="Sign in" Foreground="#1DB954" Margin="5,0,0,0" Click="Signin_Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
